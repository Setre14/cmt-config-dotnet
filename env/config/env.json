{
  "kind": "env-config",
  "apiVersion": "v1",
  "spec": {
    "paths": [
      {
        "basePath": "user-home",
        "configFilename": ".bashrc",
        "systemFilename": ".bashrc"
      },
      {
        "basePath": "user-home/.config",
        "configFilename": "nvim",
        "systemFilename": "nvim"
      },
      {
        "basePath": "user-home/.config",
        "configFilename": "env",
        "systemFilename": "env"
      }
    ],
    "valuesFile": {
      "path": "env/values",
      "name": "values",
      "ext": "json"
    }
  }
}